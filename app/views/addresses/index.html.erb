<p id="notice"></p>

<div class="container">
  <div class="row">
    <div class="mx-auto col-12">
      <h4 class="text-center bg-light col-3 offset-1 mt-4 mb-5">配送先登録/一覧</h4>
      <%= form_with model: @address, url: {controller: 'addresses', action: 'create' }, local:true do |f| %>
        <div class="field form-group row">
          <label class="col-3">郵便番号（ハイフンなし）</label>
          <div class="col-3"><%= f.text_field :postal_code, placeholder: "0000000", class: 'form-control' %></div>
        </div>
        <div class="field form-group row">
          <label class="col-3">住所</label>
          <div class="col-6"><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: 'form-control' %></div>
        </div>
        <div class="field form-group row">
          <label class="col-3">宛名</label>
          <div class="col-3"><%= f.text_field :name, placeholder: '令和道子', class: 'form-control' %></div>
          <p class="col-2 offset-9"><%= f.submit "新規登録", class: 'btn btn-sm btn-success w-100' %></p>
        </div>
      <% end %>
      <div class="col-10">
      <table class="table table-hover table-bordered">
          <thead class="thead-light">
            <tr>
              <th>郵便番号</th>
              <th>住所</th>
              <th>宛名</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to '編集する', edit_address_path(address.id), class: 'btn btn-sm btn-success' %>
                <%= link_to '削除する', address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: 'btn btn-sm btn-danger' %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>