<p id="notice"></p>

<div class="container">
  <div class="row">
    <div class="mx-auto col-12">
      <h5 class="text-center bg-light col-3 offset-1 mt-4 mb-5">配送先登録/一覧</h5>
      <%= form_with model: @address, url: {controller: 'addresses', action: 'update' }, local:true do |f| %>
        <div class="field form-group row">
          <label class="col-3">郵便番号（ハイフンなし）</label>
          <div class="col-3"><%= f.text_field :postal_code, class: 'form-control' %></div>
        </div>
        <div class="field form-group row">
          <label class="col-3">住所</label>
          <div class="col-6"><%= f.text_field :address, class: 'form-control' %></div>
        </div>
        <div class="field form-group row">
          <label class="col-3">宛名</label>
          <div class="col-3"><%= f.text_field :name, class: 'form-control' %></div>
          <p class="col-2 offset-9"><%= f.submit "変更内容を保存", class: 'btn btn-sm btn-success w-100' %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>