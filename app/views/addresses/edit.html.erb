<p id="notice"></p>

<div class="container">
  <div class="row">
    <div class="mx-auto col-12">
      <h5 class="text-center col-lg-2 offset-1 mt-4 mb-5 page-title">配送先編集</h5>
      <%= form_with model: @address, url: {controller: 'addresses', action: 'update' }, local:true do |f| %>
        <div class="field form-group row d-flex align-items-center">
          <label class="col-lg-2 small">郵便番号（ハイフンなし）</label>
          <div class="col-lg-3"><%= f.text_field :postal_code, class: 'form-control' %></div>
        </div>
        <div class="field form-group row d-flex align-items-center">
          <label class="col-lg-2 small">住所</label>
          <div class="col-lg-6"><%= f.text_field :address, class: 'form-control' %></div>
        </div>
        <div class="field form-group row d-flex align-items-center">
          <label class="col-lg-2 small">宛名</label>
          <div class="col-lg-3"><%= f.text_field :name, class: 'form-control' %></div>
          <div class="col-lg-2 offset-3"><%= f.submit "変更内容を保存", class: 'btn btn-success' %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>