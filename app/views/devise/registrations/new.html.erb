<p id="notice"></p>

<div class="container">
  <div class="row">
    <div class="mx-auto col-12">
      <h4 class="text-center col-2 mt-4 mb-5 offset-1 font-weight-bold page-title">新規会員登録</h4>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field form-group row d-flex align-items-center">
          <label class="col-2">名前</label>
          <label class="col-1 text-left">（性）</label>
          <div class="col-3"><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "令和", class: 'form-control' %></div>
          <label class="col-1 text-left">（名）</label>
          <div class="col-3"><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "道子", class: 'form-control' %></div>
        </div>

        <div class="field form-group row d-flex align-items-center">
          <label class="col-2">フリガナ</label>
          <label class="col-1 text-left">（セイ）</label>
          <div class="col-3"><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "レイワ", class: 'form-control' %></div>
          <label class="col-1 text-left">（メイ）</label>
          <div class="col-3"><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "ミチコ", class: 'form-control' %></div>
        </div>

        <div class="field form-group row d-flex align-items-center">
          <label class="col-3">メールアドレス</label>
          <div class="col-3"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: 'form-control' %></div>
        </div>
        <div class="field form-group row d-flex align-items-center">
          <label class="col-3">郵便番号（ハイフンなし）</label>
          <div class="col-3"><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "0000000", class: 'form-control' %></div>
        </div>
        <div class="field form-group row d-flex align-items-center">
          <label class="col-3">住所</label>
          <div class="col-3"><%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0", class: 'form-control' %></div>
        </div>
        <div class="field form-group row d-flex align-items-center">
          <label class="col-3">電話番号（ハイフンなし）</label>
          <div class="col-7"><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder: "00000000000", class: 'form-control' %></div>
        </div>

        <div class="field form-group row d-flex align-items-center">
          <label class="col-3">パスワード（6文字以上）</label>
          <div class="col-3"><%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %></div>
        </div>

        <div class="field form-group row d-flex align-items-center">
          <label class="col-3">パスワード（確認用）</label>
          <div class="col-3"><%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %></div>
        </div>

        <div class="actions btn-wrapper row">
          <div class="col-2 offset-3"><%= f.submit "新規登録", class: 'mt-3 btn btn-success w-100' %></div>
        </div>
      <% end %>
        <h4 class="text-center bg-light col-3 mt-2 mb-2 ml-3 font-weight-bold page-title">既に登録済みの方</h4>
      　<div class="row">
      　  <div class="offset-1"><%= render "devise/shared/links" %></div>
      　 <div>からログインしてください。</div>
      　</div>
    </div>
  </div>
</div>
