<p id="notice"></p>

<div class="container">
  <div class="row">
    <div class="mx-auto col-12">
      <h4 class="text-center col-2 mt-4 mb-5 ml-3 page-title font-weight-bold">会員情報編集</h4>

      <%= form_with model:@customer, url: {controller: 'customers', action: 'update' }, local:true do |f| %>
        <div class="field form-group row d-flex align-items-center">
          <label class="col-2">氏名</label>
          <div class="col-3"><%= f.text_field :last_name, class: 'form-control' %></div>
          <div class="col-3"><%= f.text_field :first_name, class: 'form-control' %></div>
        </div>

        <div class="field form-group row d-flex align-items-center">
          <label class="col-2">フリガナ</label>
          <div class="col-3"><%= f.text_field :last_name_kana, class: 'form-control' %></div>
          <div class="col-3"><%= f.text_field :first_name_kana, class: 'form-control' %></div>
        </div>

        <div class="field form-group row d-flex align-items-center">
          <label class="col-2">郵便番号</label>
          <div class="col-3"><%= f.text_field :postal_code, class: 'form-control' %></div>
        </div>

        <div class="field form-group row d-flex align-items-center">
          <label class="col-2">住所</label>
          <div class="col-6"><%= f.text_field :address, class: 'form-control' %></div>
        </div>

        <div class="field form-group row d-flex align-items-center">
          <label class="col-2">電話番号</label>
          <div class="col-3"><%= f.text_field :telephone_number, class: 'form-control' %></div>
        </div>

        <div class="field form-group row d-flex align-items-center">
          <label class="col-2">メールアドレス</label>
          <div class="col-3"><%= f.email_field :email, class: 'form-control' %></div>
        </div>

        <div class="actions btn-wrapper form-group row">
          <div class="col-3 offset-2"><%= f.submit "編集内容を保存", class: 'mt-3 btn btn-success w-100' %></div>
          <div class="col-2 offset-1"><%= link_to "退会する", customers_mypage_confirm_path, class: 'mt-3 btn btn-sm btn-danger w-100' %></div>
        </div>
      <% end %>

    </div>
  </div>
</div>
