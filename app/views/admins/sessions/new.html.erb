<p id="notice"></p>

<div class="container">
  <div class="row">
    <div class="mx-auto col-11">
      <h4 class="text-center bg-light col-3 mt-4 mb-5">管理者ログイン</h4>
      <form>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field form-group row">
            <label class="col-2"></label>
            <label class="col-2">メールアドレス</label>
            <div class="col-5"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %></div>
          </div>
          <div class="field form-group row">
            <label class="col-2"></label>
            <label class="col-2">パスワード</label>
            <div class="col-5"><%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %></div>
          </div>
          <div class="actions btn-wrapper form-group row">
            <label class="col-2"></label>
            <label class="col-2"></label>
            <div class="col-5"><%= f.submit "ログイン", class: 'mt-3 btn btn-sm btn-primary w-50' %></div>
          </div>
        <% end %>
      </form>
    </div>
  </div>
</div>