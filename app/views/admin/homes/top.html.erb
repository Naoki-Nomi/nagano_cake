<div class="container">
  <div class="row">
    <div class="mx-auto col-12">
      <h4 class="text-center col-lg-3 mt-4 mb-5 page-title">注文履歴一覧</h4>
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
          <% order_item = OrderItem.where(order_id: order.id) %>
        <tablebody>
          <tr>
            <td><u><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_path(order.id), class: 'text-dark' %></u></td>
            <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
            <td><%= order_item.all.sum(:amount) %></td>
            <td><%= order.status %></td>
          </tr>
        </tablebody>
        <% end %>
      </table>
      <%= paginate @orders, theme: 'twitter-bootstrap-4' %>
    </div>
  </div>
</div>