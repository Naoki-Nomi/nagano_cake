<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="mx-auto col-11">
      <h4 class="text-center bg-light col-3 mt-4 mb-5">商品編集</h4>
        <%= form_with model:@item, url: {controller: 'items', action: 'update' }, local:true do |f| %>
          <div class="row form-group">
            <label class="col-2 offset-3">商品画像</label>
            <div class="col-3"><%= f.attachment_field :image %></div>
          </div>
          <div class="row form-group">
            <label class="col-2 offset-3">商品名</label>
            <div class="col-3"><%= f.text_field :name, class: 'form-control' %></div>
          </div>
          <div class="row form-group">
            <label class="col-2 offset-3">商品説明</label>
            <div class="col-3"><%= f.text_area :introduction, class: 'form-control' %></div>
          </div>
          <div class="row form-group">
            <label class="col-2 offset-3">ジャンル</label>
            <div class="col-3"><%= f.collection_select :genre_id, Genre.all, :id, :name %></div>
          </div>
          <div class="row form-group">
            <label class="col-2 offset-3">税抜き価格</label>
            <div class="col-3"><%= f.number_field :price, class: 'form-control' %></div>
          </div>
          <div class="row form-group">
            <label class="col-2 offset-3">販売ステータス</label>
            <div class="col-3"><%= f.select :is_active, [['販売中', 1], ['販売停止中', 0]],  { include_blank: true, selected: 1 } %></div>
          </div>
          <div class="row form-group">
            <div class="col-5 offset-5"><%= f.submit '変更を保存', class: 'mt-3 btn btn-success btn-primary w-50' %></div>
          </div>
        <% end %>
    </div>
  </div>
</div>