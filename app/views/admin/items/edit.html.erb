<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="mx-auto col-11">
      <h4 class="text-center col-lg-2 ml-3 mt-4 mb-5 page-title">商品編集</h4>
        <%= form_with model:@item, url: {controller: 'items', action: 'update' }, local:true do |f| %>
          <div class="row form-group d-flex align-items-center">
            <label class="col-lg-2 offset-3">商品画像</label>
            <div class="col-lg-4"><%= f.attachment_field :image %></div>
          </div>
          <div class="row form-group d-flex align-items-center">
            <label class="col-lg-2 offset-3">商品名</label>
            <div class="col-lg-4"><%= f.text_field :name, class: 'form-control' %></div>
          </div>
          <div class="row form-group d-flex align-items-center">
            <label class="col-lg-2 offset-3">商品説明</label>
            <div class="col-lg-4"><%= f.text_area :introduction, rows: '5', class: 'form-control' %></div>
          </div>
          <div class="row form-group d-flex align-items-center">
            <label class="col-lg-2 offset-3">ジャンル</label>
            <div class="col-lg-4"><%= f.collection_select :genre_id, Genre.all, :id, :name, {}, class: 'form-control' %></div>
          </div>
          <div class="row form-group d-flex align-items-center">
            <label class="col-lg-2 offset-3">税抜き価格</label>
            <div class="col-lg-4"><%= f.number_field :price, class: 'form-control' %></div>
          </div>
          <div class="row form-group d-flex align-items-center">
            <label class="col-lg-2 offset-3">販売ステータス</label>
            <div class="col-lg-4">
              <%= f.radio_button :is_active, :販売中 %>
              <%= f.label :is_active, "販売中", {value: :販売中, style: "display: inline-block;"} %>
              <%= f.radio_button :is_active, :販売停止中 %>
              <%= f.label :is_active, "販売停止中", {value: :販売停止中, style: "display: inline-block;"} %>
            </div>
          </div>
          <div class="row form-group">
            <div class="col-5 offset-5"><%= f.submit '変更を保存', class: 'mt-3 btn btn-success btn-primary w-80' %></div>
          </div>
        <% end %>
    </div>
  </div>
</div>