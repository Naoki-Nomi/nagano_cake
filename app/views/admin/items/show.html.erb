<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="mx-auto col-11">
      <h4 class="text-center col-lg-2 ml-3 mt-4 mb-5 page-title">商品詳細</h4>
      <div class="row">
        <div class="col-lg-4 offset-1">
          <%= attachment_image_tag @item, :image, :fill, 300, 300, fallback: "no_image.jpg" %>
        </div>
        <% if @item.is_active == '販売中'
            css_class = "text-success"
           else
            css_class = "text-muted"
           end
         %>
          <div class="col-lg-6 mt-1">
            <div class="row">
              <label class="col-5 col-lg-4 offset-1">商品名</label>
              <div class="col-5 col-lg-5 ml-2"><%= @item.name %></div>
            </div>
            <div class="row">
              <label class="col-5 col-lg-4 offset-1">商品説明</label>
              <div class="col-5 col-lg-5 ml-2"><%= @item.introduction %></div>
            </div>
            <div class="row">
              <label class="col-5 col-lg-4 offset-1">ジャンル</label>
              <div class="col-5 col-lg-5 ml-2"><%= @item.genre.name %></div>
            </div>
            <div class="row">
              <label class="col-5 col-lg-4 offset-1">税込価格<br><span class="small">（税込価格）</span></label>
              <div class="col-5 col-lg-5 ml-2"><%= @price %><span> （</span><%= @tax_price %><span>）円</span></div>
            </div>
            <div class="row">
              <label class="col-5 col-lg-4 offset-1">販売ステータス</label>
              <div class="<%= css_class %> col-5 col-lg-5 ml-2"><%= @item.is_active %></div>
            </div>
            <div class="row">
              <div class="col-lg-5 offset-2"><%= link_to '編集する', edit_admin_item_path(@item.id), class: 'mt-4 btn btn-success w-80' %></div>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>