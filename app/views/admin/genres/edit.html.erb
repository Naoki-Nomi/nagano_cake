<p id="notice"></p>

<div class="container">
  <div class="row">
    <div class="mx-auto col-11">
      <h4 class="text-center col-8 col-lg-3 mt-4 mb-5 page-title">ジャンル編集</h4>
        <%= form_with model: @genre, url: {controller: 'genres', action: 'update' }, local:true do |f| %>
          <div class="row form-group">
            <label class="col-5 col-lg-2 d-flex align-items-center">ジャンル名</label>
            <div class="col-6 col-lg-3"><%= f.text_field :name, class: 'form-control' %></div>
             <div class="col-lg-3"><%= f.submit '変更を保存', class: 'btn btn-success w-80' %></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>