<div class="container">
  <div class="row">
    <div class="mx-auto col-12">
      <h4 class="col-3 text-center bg-light offset-1">注文情報確認</h4>
      <table class="table table-bordered">
        <tablehead clss="table-secondary">
          <tr>
            <td>商品名</td>
            <td>単価（税込）</td>
            <td>数量</td>
            <td>小計</td>
          </tr>
        </tablehead>
        <% @cart_items.each do |cart_item| %>
        <tablebody>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.tax_price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.total_price %></td>
          </tr>
        </tablebody>
        <% end %>
      </table>
      <table class="table table-bordered">
        <tablebody>
          <tr>
            <td class="table-secondary">送料</td>
            <td><%= @order.postage %></td>
          </tr>
          <tr>
            <td class="table-secondary">商品合計</td>
            <td><%= @customer.check_price %></td>
          </tr>
          <tr>
            <td class="table-secondary">請求金額</td>
            <td><%= (@order.postage + @customer.for_total_price).to_s(:delimited, delimiter: ',') %></td>
          </tr>
        </tablebody>
      </table>
      <div>支払方法</div>
      <%= session[:payment_method] %>
      <div>お届け先</div>
      <%= session[:delivery_postal_code] %>
      <%= session[:delivery_address] %>
      <%= session[:delivery_name] %>

      <%= link_to '注文を確定する', orders_path, method: :post, class: 'btn btn-success' %>

    </div>
  </div>
</div>



