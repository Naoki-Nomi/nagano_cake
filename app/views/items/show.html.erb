<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="mx-auto col-11">
      <div class="row">
        <div class="col-4">
          <%= attachment_image_tag @item, :image, :fill, 300, 300, fallback: "no_image.jpg", class:"rounded-circle"; %>
        </div>
          <div class="col-7 mt-5">
            <div class="row">
              <div class="col-5 offset-1"><h3><%= @item.name %></h3></div>
            </div>
            <div class="row">
              <div class="col-5 offset-1"><p><%= @item.introduction %></p></div>
            </div>
            <div class="row">
              <div class="offset-1 mt-5"><h4>￥ <%= @tax_price %></h4></div>
              <div class="offset-1 mt-5"><span>（税込）</span></div>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>