<p id="notice"></p>

<div class="container">
  <div class="row">
    <div class="mx-auto col-12">
      <div class="row">
      <div class="mt-2 mb-2"><h3><strong>商品一覧</strong></h3></div>
      <div class="mt-3 mb-2"><span>　（全件<%= Item.count %>件）</sapn></div>
      </div>
      <div class="row row-cols-1 row-cols-md-4">
        <% @items.each do |item| %>
        <div class="col mb-4">
        <div class="card h-100">
          <%= link_to item_path(item.id) do %>
            <%= attachment_image_tag item, :image, class:"card-img-top"; %>
          <% end %>
          <div class="card-body">
            <h5 class="card-name"><%= item.name %></h5>
            <h5 class="card-price"><%= item.price %></h5>
          </div>
        </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>